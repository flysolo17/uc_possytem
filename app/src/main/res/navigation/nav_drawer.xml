<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.flysolo.cashregister.navdrawer.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_inventory"
        android:name="com.flysolo.cashregister.navdrawer.inventory.InventoryFragment"
        android:label="Inventory"
        tools:layout="@layout/fragment_inventory" >
    </fragment>
    <dialog
        android:id="@+id/nav_logout"
        android:name="com.flysolo.cashregister.navdrawer.LogOutDialog"
        android:label="Log Out"
        tools:layout="@layout/log_out_dialog" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.flysolo.cashregister.purchases.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_paymentFragment_to_recieptFragment"
            app:destination="@id/recieptFragment" />
    </fragment>
    <fragment
        android:id="@+id/recieptFragment"
        android:name="com.flysolo.cashregister.purchases.ReceiptFragment"
        android:label="Receipt"
        tools:layout="@layout/fragment_receipt" >

    </fragment>
    <fragment
        android:id="@+id/nav_attendance"
        android:name="com.flysolo.cashregister.navdrawer.attendance.AttendanceFragment"
        android:label="Attendance"
        tools:layout="@layout/fragment_attendance" />
    <fragment
        android:id="@+id/nav_cashier_cash_drawer"
        android:name="com.flysolo.cashregister.navdrawer.cashdrawer.CashierCashDrawerFragment"
        android:label="Cash Drawer"
        tools:layout="@layout/fragment_cashier_cash_drawer" />


</navigation>