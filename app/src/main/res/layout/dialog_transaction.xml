<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    tools:context=".dialog.TransactionDialog">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCashierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:text="Transaction by: Cashier name"/>
        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Date &amp; Time: "/>
        <TextView
            android:id="@+id/textItemPurchased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_light"
            android:text="ItemPurchased: "/>
        <TextView
            android:id="@+id/textItemPurchasedTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Total Amount: "/>
        <Button
            android:id="@+id/buttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zxing_button_ok"
            android:layout_gravity="end"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>
</FrameLayout>