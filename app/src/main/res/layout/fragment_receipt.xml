<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".purchases.ReceiptFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="10dp"
            android:id="@+id/textStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/store_name"
            android:gravity="center"
            style="@style/TextAppearance.MaterialComponents.Headline6" />


            <TextView
                android:id="@+id/textCashierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cashier_name"
                android:layout_gravity="end"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>

        <TextView
            android:id="@+id/transactionTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="end"
            android:text="@string/date"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/layoutReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/total"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>
        </LinearLayout>

        <TextView
            android:id="@+id/buttonScreenshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="@string/thank_you"/>
    </LinearLayout>

</ScrollView>